            android:padding="10dp"
            app:srcCompat="@drawable/padrao" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textTitulo"

