<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.minhaplaylist.activity.MainActivity">


    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

          <Button
              android:id="@+id/bottaolist"
              android:layout_width="80dp"
              android:layout_height="60dp"
              android:background="@drawable/iconlista"
              android:layout_marginStart="10dp"/>

                <Button
                    android:id="@+id/bottaoplayer"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="@drawable/iconeplayers"
                    android:layout_marginStart="20dp"/>

                <Button
                    android:id="@+id/bottaoalbum"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/iconalbuns" />

                <Button
                    android:id="@+id/bottonSalva"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/iconedowloadss"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroubotton">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="LISTA"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_marginStart="15dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="PLAYER"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_marginStart="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ALBUM"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_marginStart="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SALVAS"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_marginStart="40dp"/>




    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaVideos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>
